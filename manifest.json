{
    "manifest_version": 3,
    "name": "Google Photo Mosaic & Blur",
    "version": "1.0.0",
    "description": "__MSG_appDescription__",
    "default_locale": "ja",
    "permissions": [
        "activeTab",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "https://photos.google.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Editor"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://photos.google.com/*"
            ],
            "js": [
                "lib/image-processor.js",
                "content/editor.js",
                "content/content.js"
            ],
            "css": [
                "content/editor.css"
            ],
            "run_at": "document_idle"
        }
    ]
}
